{
  "name": "mathsys",
  "version": "4.2.0",
  "type": "module",
  "description": "The Domain Specific Language for math.",
  "scripts": {
    "build/py": "python3 -m build",
    "build/ts": "babel typescript/ --extensions \".ts\" --out-dir typescript/ --out-file-extension .js && nearleyc typescript/parser/syntax.ne -o typescript/parser/syntax.cjs",
    "install/py": "pip install -e . --break-system-packages",
    "upload/py": "twine upload dist/*",
    "upload/rs": "cd python/mathsys/dev/ && cargo publish && cd ../../../",
    "upload/ts": "npm publish",
    "compile": "bash ./python/mathsys/dev/source/unix-x86-64.sh && bash ./python/mathsys/dev/source/wasm.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abscissa-math/mathsys.git"
  },
  "keywords": [
    "dsl",
    "math",
    "mathsys",
    "compiler",
    "language"
  ],
  "author": "alejandro-vaz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abscissa-math/mathsys/issues"
  },
  "homepage": "https://github.com/abscissa-math/mathsys#readme",
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1"
  },
  "dependencies": {
    "@types/nearley": "^2.11.5",
    "@types/node": "^25.0.0",
    "moo": "^0.5.2",
    "nearley": "^2.20.1"
  }
}
